extends layout

block content
  script(
    type='edgeside/dynamic-yield'
    data-edgeside-output='dy'
    data-edgeside-selectors='HP Hero Banner,HP Recommendations'
    data-edgeside-page-type='HOMEPAGE'
  )


  div.ps-hero-container
    div.ps-hero-banner
      script(type='edgeside/template' data-edgeside-input='dy')
        |{{#HP Hero Banner}}
        |  <img class="ps-hero-banner-image" src="{{image}}">
        |  <div class="ps-hero-banner-content">
        |    <p class="ps-hero-banner-title">{{title}}</p>
        |    <p class="ps-hero-banner-subtitle">{{subtitle}}</p>
        |    <a class="ps-cta-button" href="{{link}}" data-dy-decision-id="{{decisionId}}">Go Shopping</a>
        |  </div>
        |{{/HP Hero Banner}}
  div.ps-testimonial-container
    p.ps-testimonial-text “He just went crazy for it! First time he plays with the same toy for days”
    p.ps-testimonial-author Lena Davidson, David the cat’s Mom
  if recommendations
    div.ps-container
      p.ps-product-recommendations-title We think you’ll like…
    div.ps-product-listing-container
      each product in recommendations
        a.ps-prodcut-listing-item(href=`/product/${product.sku}`)
          img.ps-prodcut-listing-item__image(src=product.image_url)
          p.ps-prodcut-listing-item__name= product.name
          p.ps-prodcut-listing-item__description= product.description
          p.ps-prodcut-listing-item__price $!{product.price.toFixed(2)}
  p debug:
  script(type='edgeside/debug' data-edgeside-input='dy')
